@using ContactTask.ViewModels
@model EditContactViewModel

<div class="container row">
    <h2 class="col-11 justify-content-center pl-5">Are you sure you want to delete?</h2>
    <a href="#" class="close col-1 justify-content-end pl-3" style="margin-top: 0px;">X</a>
</div>
<form action="/Home/DeleteContact" method="post">
    <input type="hidden" name="Id" value=@Model.Id />
    <div class="container m-0 d-flex flex-column justify-content-center">
        <span>@Model.Name</span>
        <span>@Model.MobilePhone</span>
        <span>@Model.JobTitle</span>
        <span>@Model.Dear</span>
        <span>@Model.BirthDate</span>
    </div>
    <div class="container m-0">
        <div class="row">
            <div class="col-11 d-flex justify-content-end p-0 mt-5">
                <input class="btn btn-primary" style="width: 100px" type="submit" id="Sub" name="Sub" value="Delete" />
            </div>
        </div>
    </div>
</form>